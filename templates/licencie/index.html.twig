{% extends 'base.html.twig' %}

{% block title %}Licencie index{% endblock %}

{% block body %}
    <h1>Liste des licenciés</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomLicencie</th>
                <th>PrenomLicencie</th>
                <th>PhotoLicencie</th>
                <th>DateNaissance</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for licencie in licencies %}
            <tr>
                <td>{{ licencie.id }}</td>
                <td>{{ licencie.nomLicencie }}</td>
                <td>{{ licencie.prenomLicencie }}</td>
                <td>
                    <img src="{{ asset(licencie.photoLicencie) }}" alt="Photo de {{ licencie.prenomLicencie }} {{ licencie.nomLicencie }}" style="max-width: 100px; height: auto;">
                </td>
                <td>{{ licencie.dateNaissance ? licencie.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_licencie_show', {'id': licencie.id}) }}">voir</a>
                    <a href="{{ path('app_licencie_edit', {'id': licencie.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">aucun licencié trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_licencie_new') }}">Créer un nouveau licencié</a>
{% endblock %}
