{% extends 'base.html.twig' %}

{% block title %}Equipe index{% endblock %}

{% block body %}
    <h1>Liste des équipes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomEquipe</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipe in equipes %}
            <tr>
                <td>{{ equipe.id }}</td>
                <td>{{ equipe.nomEquipe }}</td>
                <td>
                    <a href="{{ path('app_equipe_show', {'id': equipe.id}) }}">voir</a>
                    <a href="{{ path('app_equipe_edit', {'id': equipe.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">aucune équipe trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_equipe_new') }}">Créer une nouvelle équipe</a>
{% endblock %}
