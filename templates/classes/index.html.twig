{% extends 'base.html.twig' %}

{% block title %}Classes index{% endblock %}

{% block body %}
    <h1>Liste des classes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_classe</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for class in classes %}
            <tr>
                <td>{{ class.id }}</td>
                <td>{{ class.nomClasse }}</td>
                <td>
                    <a href="{{ path('app_classes_show', {'id': class.id}) }}">voir</a>
                    <a href="{{ path('app_classes_edit', {'id': class.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">aucune entrée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_classes_new') }}">Créer une nouvelle classe</a>
{% endblock %}
